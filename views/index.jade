extends layout

block content
  section(class='settings-panel')
  section(class='module module-chat resizable selectable')
    .title-bar
      h3 Chat
    ul.list-view
      - for(var i = 0;i<20;i++)
        li Lorem Ipsum
    .chat-form
        form#chat_form
          input(autocomplete='off',type='text', id='chat_msg', name='chat_msg', placeholder='...')
  section(class='module module-video resizable selectable')
    .title-bar
      h3 Video Conferencing
    .module-inner
        section(class='video-focus')
          .flc-webrtc-room
            form
              input(type='text', class='flc-webrtc-room-name', placeholder='Enter Room Name')
              input(type='submit', class='flc-webrtc-room-submit', placeholder='Join')
        section(class='video-tiles flc-webrtc-tiles-container') 
          .title-bar
            h3 Collaborators
  section(class='module module-notes resizable selectable')  
    .title-bar
      h3 Notes
    .module-inner
        p .
          Content here
block script
    script.
        FC.env = '#{env}';
        FC.init();